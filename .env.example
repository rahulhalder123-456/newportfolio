# Firebase Admin SDK Credentials
# Go to Project Settings > Service Accounts > Generate new private key
FIREBASE_PROJECT_ID="REPLACE_WITH_YOUR_FIREBASE_PROJECT_ID"
FIREBASE_CLIENT_EMAIL="REPLACE_WITH_YOUR_FIREBASE_CLIENT_EMAIL"
# IMPORTANT: When pasting the private key, replace all newline characters with \\n
FIREBASE_PRIVATE_KEY="REPLACE_WITH_YOUR_FIREBASE_PRIVATE_KEY"

# A secret password to access the /admin route
NEXT_PUBLIC_ADMIN_PASSWORD="REPLACE_WITH_YOUR_ADMIN_PASSWORD"

# Resend API Key for the contact form to work
# Get one from https://resend.com
RESEND_API_KEY="REPLACE_WITH_YOUR_RESEND_API_KEY"
# The email address that will receive messages from the contact form
EMAIL_RECIPIENT="REPLACE_WITH_YOUR_EMAIL_ADDRESS"

# Gemini API Key (needed if you are not hosting on Firebase)
# Get one from Google AI Studio: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY="REPLACE_WITH_YOUR_GEMINI_API_KEY"
